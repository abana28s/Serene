{
    "manifest_version":2,
    "name": "Productivity Manager",
    "version" : "1.0" ,
    
    "content_scripts": [
        {
            "matches":[
                "<all_urls>"
            ],
            "js":[
                "main.js"
            ]
        }
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent":true
    },

    "permissions": [
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "\u003Call_urls>"
    ],
        
    "browser_action":{
        "default_icon" : "countdown.png",
        "default_popup": "popup.html"   
    }
}